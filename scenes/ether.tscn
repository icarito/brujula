[sub_resource type="Shader" id="Shader_note"]
code = "shader_type spatial;\nrender_mode cull_disabled;\n\nuniform float bend_strength = 0.5;\nuniform float width = 0.3;\nuniform float wave_amp = 0.003;\nuniform float wave_freq = 8.0;\nuniform float wave_speed = 1.1;\n\nvoid vertex() {\n\tvec3 p = VERTEX;\n\tif (abs(bend_strength) > 0.01) {\n\t\tfloat half_w = width * 0.5;\n\t\tfloat t = clamp(p.x / half_w, -1.0, 1.0);\n\t\tfloat ang = bend_strength * t;\n\t\tfloat radius = half_w / bend_strength;\n\t\tfloat x_new = sin(ang) * radius;\n\t\tfloat y_curve = (cos(ang) - 1.0) * radius;\n\t\tp.x = x_new;\n\t\tvec3 model_up = (MODEL_MATRIX * vec4(0.0, 1.0, 0.0, 0.0)).xyz;\n\t\tfloat orientation = sign(model_up.y);\n\t\tif (orientation == 0.0) { orientation = 1.0; }\n\t\tp.y += y_curve * orientation;\n\t}\n\tif (abs(wave_amp) > 0.0001) {\n\t\tp.y += sin(TIME * wave_speed + p.x * wave_freq) * wave_amp;\n\t}\n\tVERTEX = p;\n}\n\nvoid fragment() {\n\tALBEDO = vec3(1.0);\n}"

